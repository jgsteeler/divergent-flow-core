{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS", 
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["jest", "node"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "ignoreDeprecations": "6.0",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@div-flo/models": ["packages/div-flo-models/src"],
      "@div-flo/core": ["packages/div-flo-core/src"],
      "@div-flo/api": ["packages/div-flo-api/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}