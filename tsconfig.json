{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS", 
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["jest", "node"],
    "strict": true,
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@div-flo/models": ["packages/div-flo-models/src"],
      "@div-flo/core": ["packages/div-flo-core/src"],
      "@div-flo/api": ["packages/div-flo-api/src"]
    },
    "removeComments": false
  },
  "references": [
    { "path": "./packages/div-flo-models" },
    { "path": "./packages/div-flo-core" },
    { "path": "./packages/div-flo-api" }
  ],
  "files": [],
  "exclude": [
    "node_modules",
    "dist"
  ]
}