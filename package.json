{
  "name": "divergent-flow-core",
  "version": "0.1.7",
  "description": "Core business logic and API services for Divergent Flow - ADHD-optimized productivity system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install",
    "start": "npm run start --workspace=packages/div-flo-api",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose -f docker-compose.yml -p local-prod up -d --build",
    "docker:down": "docker-compose -f docker-compose.yml -p local-prod down",
    "docker:logs": "docker-compose -f docker-compose.yml -p local-prod logs -f divergent-flow-api",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml -p dev up -d --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml -p dev down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml -p dev logs -f api-dev",
    "release": "standard-version && npm run sync-versions",
    "release:minor": "standard-version --release-as minor && npm run sync-versions",
    "release:major": "standard-version --release-as major && npm run sync-versions",
    "sync-versions": "node scripts/sync-versions.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.0",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
