{
  "name": "divergent-flow-core",
  "version": "0.2.0",
  "description": "Core business logic and API services for Divergent Flow - ADHD-optimized productivity system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b -v",
    "build:clean": "tsc -b --clean && tsc -b -v",
    "dev": "cd packages/div-flo-api && nodemon src/server.ts",
    "test": "npm test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "tsc -b --clean",
    "install:all": "npm install",
    "start": "npm run start --workspace=packages/div-flo-api",
    "sync-versions": "node scripts/sync-versions.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
