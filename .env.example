# Environment Configuration Template
# Copy this file to .env and customize for your deployment

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================
# Determines logging level, error handling, and feature flags
# Options: development, localProd, staging, production
NODE_ENV=localProd

# Indicates if running in Docker container
# Options: true, false  
DOCKER=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Internal port the API server listens on
PORT=3001

# External port for Docker port mapping
EXTERNAL_PORT=8080

# =============================================================================
# LOGGING CONFIGURATION  
# =============================================================================
# Logging verbosity level
# Options: error, warn, info, debug
LOG_LEVEL=info

# Directory where log files are stored
# Docker: /var/log/divergent-flow
# Local:  ./logs
LOG_DIR=/var/log/divergent-flow

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Version identifier (can be overridden for different environments)
API_VERSION=0.1.2

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================
# 
# Local Development (no Docker):
# NODE_ENV=development
# DOCKER=false  
# LOG_LEVEL=debug
# LOG_DIR=./logs
# API_VERSION=dev-local
#
# Local Production ("eat the dog food"):
# NODE_ENV=localProd
# DOCKER=true
# LOG_LEVEL=info
# LOG_DIR=/var/log/divergent-flow  
# API_VERSION=0.1.2
#
# CI/CD Development:
# NODE_ENV=development
# DOCKER=true
# LOG_LEVEL=debug
# API_VERSION=dev-latest
#
# CI/CD Staging:
# NODE_ENV=staging
# DOCKER=true
# LOG_LEVEL=info
# API_VERSION=staging-latest
#
# CI/CD Production:
# NODE_ENV=production
# DOCKER=true
# LOG_LEVEL=warn
# API_VERSION=latest